<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Playable_Ads_Madatory_Fields</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
    CONTAINS(LOWER(Name), &quot;playable&quot;),
    NOT(ISPICKVAL(Type, &quot;Single_Campaign&quot;))
)</errorConditionFormula>
    <errorDisplayField>Type</errorDisplayField>
    <errorMessage>Please select the &apos;Single Campaign&apos; value, as this is a Playable Ad Opportunity.</errorMessage>
</ValidationRule>
